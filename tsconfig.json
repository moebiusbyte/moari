{
    "include": [
        "./src/**/*"
, "database.ts", "server/app.js"    ],
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@app/*": ["./app/*"],
            "@assets/*": ["./assets/*"],
            "@components/*": ["./components/*"],
            "@styles/*": ["./styles/*"],
            "@utils/*": ["./utils/*"],
            "@/*": ["./src/*"]
          },
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "jsx": "react-jsx",
        "module": "esnext",
        "target": "es2020"
    }
}